@model MobileWebApp.Models.ListUserRegistersViewModel

@{
    ViewBag.Title = "Mobile Web App";
}

<br />
<div class="panel panel-primary">
    <div class="panel-heading">List of Registered Users</div>
    <table class="table table-striped">
        <thead>
            <tr>                
                <th>First Name</th>
                <th>Last Name</th>                
                <th>Birthday</th>
                <th>Phone</th>
                <th>Phone Type</th> 
                <th>Text Message</th>               
                <th>Password</th>
                <th>Email Address</th>               
            </tr>
        </thead>
        @foreach (var item in Model.UserRegisters) {
            <tr>                
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Birthday)</td>               
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>                
                <td>@Html.DisplayFor(modelItem => item.PhoneType)</td> 
                @if (item.TextMsg == "True")
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }                              
                <td>@Html.DisplayFor(modelItem => item.UserPassword)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>                           
            </tr>
        }
    </table>
</div>

<br />
<ul id="messages"></ul>

@section Scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var hub = $.connection.echoHub;
            hub.client.greetings = function (message) {
                //$('#messages').append($('<li/>').html(message));
                if (message === "reload") {
                    console.log("message = " + message);
                    location.reload();
                }
            };
            $.connection.hub.start();
        });
    </script>
}